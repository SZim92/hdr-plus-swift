# HDR+ Swift - Version and Configuration Environment Variables
# Import this file in workflows using: source .github/versions.env

# Version information
VERSION_MAJOR=0
VERSION_MINOR=1
VERSION_PATCH=0

# Project identifiers
XCODE_PROJECT=burstphoto.xcodeproj
XCODE_SCHEME_GUI=gui
XCODE_SCHEME_CLI=cli

# Build configurations
BUILD_CONFIGURATION_DEBUG=Debug
BUILD_CONFIGURATION_RELEASE=Release

# Artifact retention (days)
RETENTION_DEFAULT=7
RETENTION_EXTENDED=90
RETENTION_RELEASES=365

# Performance thresholds
MAX_BINARY_SIZE=50
MAX_PERF_REGRESSION=5
MIN_CODE_COVERAGE=75
TARGET_CODE_COVERAGE=85

# Repository settings
MAIN_BRANCH=main
DOCS_BRANCH=gh-pages
RELEASE_TAG_PATTERN=v*
README_TITLE="HDR+ Swift"

# Slack channels
SLACK_CHANNEL_ALERTS=ci-alerts
SLACK_CHANNEL_RELEASES=releases
SLACK_CHANNEL_GENERAL=general 